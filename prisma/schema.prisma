generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SourceType {
  TEXT
  IMAGE
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  sources    Source[]
  cards      Card[]
  reviewLogs ReviewLog[]
  playlists  Playlist[]
}

model Source {
  id        String     @id @default(cuid())
  userId    String
  type      SourceType
  rawText   String?
  latex     String?
  markdown  String?
  imageUrl  String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  cards Card[]
}

model Card {
  id            String    @id @default(cuid())
  userId        String
  sourceId      String?
  front         String
  back          String
  tags          String[]  @default([])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  due           DateTime?
  stability     Float?
  difficulty    Float?
  elapsedDays   Int?
  scheduledDays Int?
  reps          Int?
  lapses        Int?
  state         String?
  lastReviewed  DateTime?

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  source     Source?     @relation(fields: [sourceId], references: [id])
  reviewLogs ReviewLog[]
  embedding  CardEmbedding?
  playlists  PlaylistCard[]

  @@index([userId, due])
}

model ReviewLog {
  id            String   @id @default(cuid())
  userId        String
  cardId        String
  reviewedAt    DateTime @default(now())
  rating        Int
  scheduledDays Int?
  elapsedDays   Int?
  state         String?
  logJson       Json?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@index([userId, cardId])
}

model CardEmbedding {
  cardId    String  @id
  userId    String
  embedding Unsupported("vector")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, createdAt])
}

model Playlist {
  id          String          @id @default(cuid())
  userId      String
  name        String
  description String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  user  User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  cards PlaylistCard[]
}

model PlaylistCard {
  playlistId String
  cardId     String
  addedAt    DateTime @default(now())

  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  card     Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@id([playlistId, cardId])
  @@index([cardId])
}
